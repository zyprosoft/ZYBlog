{
    "name": "zyprosoft/hyperf-skeleton",
    "description": "zyprosoft hyperf-skeleton base project",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "zyvincent",
            "email": "1003081775@qq.com"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "http://106.53.15.86:8099/zyprosoft/hyperf-common.git"
        }
    ],
    "config": {
        "secure-http": false
    },
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.5",
        "hyperf/cache": "~2.0.0",
        "hyperf/command": "~2.0.0",
        "hyperf/config": "~2.0.0",
        "hyperf/db-connection": "~2.0.0",
        "hyperf/framework": "~2.0.0",
        "hyperf/guzzle": "~2.0.0",
        "hyperf/http-server": "~2.0.0",
        "hyperf/logger": "~2.0.0",
        "hyperf/memory": "~2.0.0",
        "hyperf/process": "~2.0.0",
        "hyperf/redis": "~2.0.0",
        "hyperf/constants": "~2.0.0",
        "hyperf/async-queue": "~2.0.0",
        "hyperf/model-cache": "~2.0.0",
        "hyperf/elasticsearch": "~2.0.0",
        "hyperf/tracer": "~2.0.0",
        "hyperf/validation": "^2.0",
        "ext-json": "*",
        "96qbhy/hyperf-auth": "^2.2",
        "hyperf/testing": "^2.0",
        "qbhy/hyperf-multi-env": "^2.0",
        "qbhy/hyperf-testing": "^1.0",
        "hyperf/crontab": "^2.0",
        "qiniu/php-sdk": "^7.2",
        "hyperf/metric": "^2.0",
        "hyperf/session": "^2.0",
        "overtrue/wechat": "~5.0",
        "zyprosoft/hyperf-common": "dev-master"
    },
    "require-dev": {
        "swoole/ide-helper": "^4.5",
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "hyperf/devtool": "~2.0.0",
        "hyperf/testing": "~2.0.0"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "./test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": [],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
        "start": "php ./bin/hyperf.php start"
    }
}
